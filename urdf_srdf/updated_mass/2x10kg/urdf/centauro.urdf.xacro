<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="centauro">

<!-- ************ MODEL CONFIGURATION ************ -->
<xacro:include filename="$(find centauro_urdf)/urdf/centauro_config.urdf.xacro" />

<!-- ************ Pholus plain model ************ -->
<xacro:include filename="$(find centauro_urdf)/urdf/centauro_base.urdf.xacro"/>

<!-- ************ Control frames ************ -->
<!--xacro:include filename="$(find pholus_urdf)/urdf/control_frames.urdf.xacro"/-->

<xacro:if value="${ADD_FLOATING_BASE}">
<link name="world"/>

  <joint name="reference" type="floating">
    <parent link="world"/>
    <child link="pelvis"/>
</joint>
</xacro:if>

<xacro:unless value="${ADD_FLOATING_BASE}">
<link name="world"/>

  <joint name="reference" type="fixed">
    <parent link="world"/>
    <child link="pelvis"/>
</joint>
</xacro:unless>

<xacro:if value="${ADD_VIRTUAL_FRAME}">
  <xacro:include filename="$(find centauro_urdf)/urdf/parts/virtual_frame.urdf.xacro"/>
</xacro:if>

</robot>
